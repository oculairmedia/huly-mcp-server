{
  "name": "huly-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Huly project management platform",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "start:http": "node index.js --transport=http",
    "start:stdio": "node index.js --transport=stdio",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:staged": "NODE_OPTIONS='--experimental-vm-modules' jest --bail --findRelatedTests",
    "test:mcp": "node scripts/test-mcp-tools.js",
    "test:integration": "node scripts/integration-test-runner.js",
    "test:integration:smoke": "TEST_SUITE=smoke node scripts/integration-test-runner.js",
    "test:integration:full": "TEST_SUITE=full node scripts/integration-test-runner.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@hcengineering/activity": "0.6.500",
    "@hcengineering/api-client": "0.6.500",
    "@hcengineering/chunter": "0.6.500",
    "@hcengineering/collaborator-client": "0.6.500",
    "@hcengineering/core": "0.6.500",
    "@hcengineering/rank": "0.6.500",
    "@hcengineering/task": "0.6.500",
    "@hcengineering/tracker": "0.6.500",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.4",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "node-fetch": "^3.3.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.test.js": [
      "prettier --write",
      "eslint --fix",
      "npm run test:staged --"
    ],
    "*.json": "prettier --write",
    "*.md": "prettier --write"
  }
}
