{
  "name": "huly-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Huly project management platform",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "start:http": "node index.js --transport=http",
    "start:stdio": "node index.js --transport=stdio",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --ci --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@hcengineering/api-client": "0.6.500",
    "@hcengineering/core": "0.6.500",
    "@hcengineering/tracker": "0.6.500",
    "@hcengineering/task": "0.6.500",
    "@hcengineering/rank": "0.6.500",
    "@hcengineering/chunter": "0.6.500",
    "@hcengineering/activity": "0.6.500",
    "@hcengineering/collaborator-client": "0.6.500",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "ws": "^8.16.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "index.js",
      "StatusManager.js",
      "!scripts/**",
      "!coverage/**",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}